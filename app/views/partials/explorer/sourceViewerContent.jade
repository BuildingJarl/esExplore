//- Files panel
div.sourceViewerPanel
	span.closeOpen(ng-click="showFiles = !showFiles")
		span.fa.fa-minus-square-o.fa-2x(ng-show="showFiles")
		span.fa.fa-plus-square-o.fa-2x(ng-show="!showFiles")
	div.title
		span
			| Files	

	div.tableContainer(ng-show="showFiles")
		div.headerContainer
			div.headerItem.three Name
			div.headerItem.three Lines
			div.headerItem.three Scopes
		div.bodyContainer
			div.bodyRow(ng-repeat="file in files")
				div.bodyItem.three  {{file.name}}
				div.bodyItem.three  {{file.lineNr}}
				div.bodyItem.three  {{file.ScopeCount}}

//- Current selected scope panel
div.sourceViewerPanel
	span.closeOpen(ng-click="showCurrent = !showCurrent")
		span.fa.fa-minus-square-o.fa-2x(ng-show="showCurrent")
		span.fa.fa-plus-square-o.fa-2x(ng-show="!showCurrent")
	div.title
		| Current
	div.tableContainer(ng-show="showCurrent")
		div.headerContainer
			div.headerItem.four Name
			div.headerItem.four Start
			div.headerItem.four End
			div.headerItem.four Children
		div.bodyContainer
			div.bodyRow
				div.bodyItem.four {{selectedScope.getName()}}
				div.bodyItem.four {{selectedScope.getStartLoc()}}
				div.bodyItem.four {{selectedScope.getEndLoc()}}
				div.bodyItem.four {{selectedScope.children.length}}

//- Current selected scopes children Panel
div.sourceViewerPanel
	span.closeOpen(ng-click="showChildren = !showChildren")
		span.fa.fa-minus-square-o.fa-2x(ng-show="showChildren")
		span.fa.fa-plus-square-o.fa-2x(ng-show="!showChildren")
	div.title
		| Children
	div.tableContainer(ng-show="showChildren")
		div.headerContainer
			div.headerItem.four Name
			div.headerItem.four Start
			div.headerItem.four End
			div.headerItem.four Children
		div.bodyContainer
			div.bodyRow(ng-repeat="child in selectedScope.children")
				div.bodyItem.four {{child.getName()}}
				div.bodyItem.four {{child.getStartLoc()}}
				div.bodyItem.four {{child.getEndLoc()}}
				div.bodyItem.four {{child.children.length}}

