//- Files panel
div( class="sourceViewerPanel" )
	div.title
		span(style="left:0;")
			| Files
		span(style="right:0;")
			i(class="fa fa-minus-square-o fa-2x")
		
	table
		thead
			tr
				td.nameCell Name
				td.numberCell Length
				td.numberCell Variables
				td.numberCell Scopes
		tbody
			tr(ng-repeat="file in files")
				td.nameCell {{ file.name }}
				td.numberCell {{ file.lineNr }}
				td.numberCell {{ file.varCount }}
				td.numberCell {{ file.ScopeCount }}

//- Current selected scope panel
div( class="sourceViewerPanel" )
	div.title
		| Current
	table
		thead
			tr
				td.nameCell Name
				td.numberCell Children
				td.numberCell Variables
				td.numberCell Line Nr
		tbody
			tr
				td.nameCell {{ selectedScope.getName() }}
				td.numberCell {{ selectedScope.children.length }}
				td.numberCell {{ selectedScope.getVarCount() }}
				td.numberCell {{ selectedScope.getLineNr() }}

//- Current selected scopes children Panel
div( class="sourceViewerPanel" )
	div.title
		| Children
	table
		thead
			tr
				td.nameCell Name
				td.numberCell Children
				td.numberCell Variables
				td.numberCell Line Nr
		tbody
			tr(ng-repeat="scope in selectedScope.children")
				td.nameCell {{ scope.getName() }}
				td.numberCell {{ scope.children.length }}
				td.numberCell {{ scope.getVarCount() }}
				td.numberCell {{ scope.getLineNr() }}
